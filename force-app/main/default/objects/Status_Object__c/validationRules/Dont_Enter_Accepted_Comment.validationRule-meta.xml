<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Dont_Enter_Accepted_Comment</fullName>
    <active>true</active>
    <errorConditionFormula>and( ispickval(Status__c ,&apos;Rejected&apos;),
     !ISBLANK(   Accepted_Comment__c  ))</errorConditionFormula>
    <errorDisplayField>Accepted_Comment__c</errorDisplayField>
    <errorMessage>Error</errorMessage>
</ValidationRule>
